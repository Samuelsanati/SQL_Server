CREATE DATABASE Stare 
GO

--saller = فروشنده
--Seller Details = جزئیات فروشنده

CREATE TABLE Seller (
Id_Seller INT  IDENTITY NOT NULL PRIMARY KEY,
SellerDetails VARCHAR (50) NOT NULL
)
