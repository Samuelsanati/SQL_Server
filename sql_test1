create database books
use books 
create table Titles (
idTitles int,
introduction text,
topic nvarchar (50)
);
create table Authors (
idAuthors int,
fNameAuthors nvarchar (50),
lNameAuthors nvarchar (50),
genderAuthors nvarchar (5),
ageAuthors int,
EmailAuthors char (50)
);
create table Publisher (
idPublisher int,
NamePublisher nvarchar (50),
EmailPublisher char (50)
);
insert into Titles (idTitles,introduction,topic)
            values (1,'پیش رفت روز افزون علم وفن آوری...','گامی در شناخت مواد مخدر و روان گردان'),
                   (2,'این کتاب حاوی مطالبی درباره هاله انسان و پردازش نوع شخصیت ...','هاله ات چه رنگی است')
insert into Authors (idAuthors,fNameAuthors,lNameAuthors,genderAuthors,ageAuthors,EmailAuthors)
            values (1,'میلاد','حاتمی','مذکر','46','miladhatami@gmail.com'),
			       (2,'باورز','باربارا','مونث','51','baverzbarbara@gmail.com')
insert into Publisher (idPublisher,NamePublisher,EmailPublisher)
            values ('1','انتشارات معراج','merajpublisher@gmail.com'),
			       ('2','انتشارات درسا','dorsa_publisher@gmail.com')

select * from Titles
select * from Authors
select * from Publisher

update Titles
set introduction = 'مواد روان گردان از دیر باز توسط مردم استفاده میشده است'
where idTitles = '1'
select * from Titles

update Authors
set fNameAuthors = 'رضا',lNameAuthors = 'میرعماد'
where idAuthors = '1'
select * from Authors

update Publisher
set NamePublisher = 'انتشارات دنیای خوب'
where idPublisher = '2'
select * from Publisher
